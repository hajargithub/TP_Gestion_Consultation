<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ma.enset.gestionconsultations.controllers.ConsultationController">
    <top>
        <VBox spacing="10" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Ajouter une consultation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="patientComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

                <Label text="Date de consultation:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateConsultationPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Ajouter Consultation" onAction="#onAjouterConsultation" maxWidth="200"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Liste des Consultations" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <TableView fx:id="consultationTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colPatient" text="Patient" prefWidth="200"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
