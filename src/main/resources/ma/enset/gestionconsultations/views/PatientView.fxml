<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ma.enset.gestionconsultations.controllers.PatientController">
    <top>
        <VBox spacing="10" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Ajouter un patient" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Téléphone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="telField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Adresse:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="addressField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Date de naissance:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateOfBirthField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Sexe:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="genderComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Ajouter Patient" onAction="#onAjouterPatient" maxWidth="150"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Liste des Patients" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <TableView fx:id="patientTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colNom" text="Nom" prefWidth="100"/>
                    <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="100"/>
                    <TableColumn fx:id="colTel" text="Téléphone" prefWidth="100"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="colAddress" text="Adresse" prefWidth="150"/>
                    <TableColumn fx:id="colDateOfBirth" text="Date de Naissance" prefWidth="130"/>
                    <TableColumn fx:id="colGender" text="Sexe" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
